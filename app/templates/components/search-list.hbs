<div class="row">
	<div class="col-md-6">
    <div class="form-group">
      {{input type='text' class='form-control' placeholder='Type in a song title or artist name' value=query action='querySongs'}}
    </div>
	</div>
	<div class="col-md-6">
    <h3>Results</h3>
    <div class='results'>
      <ul>
        {{#each results as |song|}}
          <li>{{song.title}}</li>
        {{/each}}
      </ul>
    </div>
	</div>
</div>
